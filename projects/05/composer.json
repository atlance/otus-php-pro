{
    "name": "atlance/otus-php-pro-05",
    "homepage": "https://github.com/atlance/email-validator",
    "license": "MIT",
    "description": "function for email validation",
    "type": "library",
    "keywords": ["email validator"],
    "authors": [
        {
            "name": "Anton Stepanov",
            "email": "lanposts@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": { "Atlance\\EmailValidator\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Atlance\\EmailValidator\\Tests\\": "tests" }
    },
    "scripts": {
        "tests": "XDEBUG_MODE=coverage ./vendor/bin/phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "process-timeout": 0
    }
}
