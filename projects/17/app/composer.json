{
    "name": "atlance/otus-php-pro-17-payment-service",
    "description": "Course of «PHP Developer. Professional» from OTUS. Homework.",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Anton Stepanov",
            "email": "lanposts@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "doctrine/doctrine-bundle": "^2.9",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.15",
        "psr/clock": "^1.0",
        "symfony/clock": "^6.2",
        "symfony/flex": "^2.2",
        "symfony/framework-bundle": "^6.2",
        "symfony/http-client": "^6.2",
        "symfony/property-access": "^6.2",
        "symfony/runtime": "^6.2",
        "symfony/serializer": "^6.2",
        "symfony/translation": "^6.2",
        "symfony/uid": "^6.2",
        "symfony/validator": "^6.2",
        "symfony/yaml": "^6.2"
    },
    "require-dev": {
        "brianium/paratest": "^7.1",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "ergebnis/composer-normalize": "^2.30",
        "fakerphp/faker": "^1.22",
        "overtrue/phplint": "^9.0",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/phpstan-symfony": "^1.3",
        "psalm/plugin-symfony": "^5.0",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/browser-kit": "^6.2",
        "symfony/css-selector": "^6.2",
        "symfony/phpunit-bridge": "^6.2",
        "vimeo/psalm": "^5.11"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Contracts\\": "contracts/",
            "App\\Exceptions\\": "exceptions/",
            "App\\Migrations\\": "migrations/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Fixtures\\": "fixtures/",
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "symfony/runtime": true,
            "symfony/flex": false
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "paratest": "XDEBUG_MODE=coverage,debug vendor/bin/paratest -c phpunit.xml.dist --colors --runner=WrapperRunner",
        "php-analyze": [
            "@phpcs",
            "@phplint",
            "@phpstan",
            "@psalm"
        ],
        "phpcs": "vendor/bin/phpcs",
        "phplint": "vendor/bin/phplint -c phplint.yml.dist",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon.dist --no-progress --memory-limit=-1",
        "psalm": "vendor/bin/psalm -c psalm.xml.dist --no-cache --threads=6 --memory-limit=-1"
    }
}
